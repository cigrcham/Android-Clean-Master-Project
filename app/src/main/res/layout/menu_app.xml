<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMenu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_70"
    android:background="@drawable/bg_dialog_bottom_sheet_app">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUninstall"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.33">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUninstall"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:paddingVertical="@dimen/size_10"
            android:src="@drawable/ic_bottom_sheet_uninstall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUninstall"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/uninstall"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgUninstall" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutProperties"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layoutShare"
        app:layout_constraintStart_toEndOf="@id/layoutUninstall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.33">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPropertiesApk"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:paddingVertical="@dimen/size_10"
            android:src="@drawable/ic_bottom_sheet_properties"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProperties"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/properties"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgPropertiesApk" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutShare"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.33">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgShareApk"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:paddingVertical="@dimen/size_10"
            android:src="@drawable/ic_bottom_sheet_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShare"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/share_file"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgShareApk" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
