<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_12" />
            <size android:height="@dimen/size_24" />
            <solid android:color="@color/grayF6F6F6" />
            <stroke
                android:width="@dimen/size_1"
                android:color="@color/white" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal"
        android:left="@dimen/size_3"
        android:right="@dimen/size_3">
        <scale android:scaleWidth="90%">
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <size android:height="18dp" />
                <gradient
                    android:endColor="@color/color_end_gradient"
                    android:startColor="@color/color_start_gradient" />
            </shape>
        </scale>
    </item>
</layer-list>