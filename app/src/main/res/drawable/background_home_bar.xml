<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#DED9D9" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:centerColor="#4C72F4"
                    android:endColor="#AB5EF6"
                    android:startColor="#EA5EA1" />
            </shape>
        </scale>
    </item>
</layer-list>
